<?xml version="1.0" encoding="UTF-8"?>
<Configuration status="WARN">
	<Appenders>
		<Console name="Console" target="SYSTEM_OUT">
			<PatternLayout pattern="%d{HH:mm:ss.SSS} %-5level %logger{36}.%M:%L - %msg%n" />
		</Console>
	</Appenders>
	<Loggers>
		<Root level="TRACE">
			<AppenderRef ref="Console" />
		</Root>

		<Logger name="org.springframework" level="ERROR" additivity="true">
			<AppenderRef ref="Console" />
		</Logger>
		<Logger name="com.mchange" level="ERROR" additivity="true">
			<AppenderRef ref="Console" />
		</Logger>
		<Logger name="org.jgroups" level="ERROR" additivity="true">
            <AppenderRef ref="Console" />
        </Logger>
        <Logger name="org.infinispan" level="ERROR" additivity="true">
            <AppenderRef ref="Console" />
        </Logger>
	</Loggers>
</Configuration> 